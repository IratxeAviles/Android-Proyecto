<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosAdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="160dp"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etPregunta"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="32dp"
            android:hint="Pregunta"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etR1"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:hint="Respuesta 1"
                android:inputType="text" />

            <EditText
                android:id="@+id/etR2"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:hint="Respuesta 2"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etR3"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:hint="Respuesta 3"
                android:inputType="text" />

            <EditText
                android:id="@+id/etCorrecta"
                android:layout_width="175dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:hint="Correcta"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/bModificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:text="Modificar" />

            <Button
                android:id="@+id/bBorrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="22dp"
                android:text="Borrar" />

            <Button
                android:id="@+id/bSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>